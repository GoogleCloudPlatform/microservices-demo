generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Order {
  id         String          @id @default(uuid())
  userId     String
  placedOn   DateTime        @default(now())
  orderItems OrderPosition[]
}

model OrderPosition {
  productId String @id
  quantity  Int
  Order     Order? @relation(fields: [orderId], references: [id])
  orderId   String
}
